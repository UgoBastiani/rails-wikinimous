<div class="d-flex bg-light justify-content-between p-2" >
  <h2>Articles</h2>
  <%= link_to "New article", new_article_path, class: "btn btn-primary text-decoration-none"%>
</div>

<div class="container d-flex justify-content-center">
  <div class="w-50">
    <ul class="list-unstyled">
      <% @articles.each do |article| %>
      <li>
        <%= link_to article.title, article_path(article) %><br>
        <%= article.content %>
      </li>
      <% end %>
    </ul>
  </div>
</div>
